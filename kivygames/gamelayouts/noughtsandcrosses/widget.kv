#:kivy 1.11.1

<NoughtsAndCrosses>:
    orientation: 'vertical'
    Label:
        text: 'Noughts and crosses'
        size_hint: 1, None
    BoxLayout:
        padding: 20
        orientation: 'vertical' if self.parent.size[0] < self.parent.size[1] else 'horizontal'
        Label:
            text: root.playerText
        NoughtsAndCrossesBoard:
            cellsProperty: root.cells
            on_choose: root.gameInput('Position', *args)
        Label:
            text: root.outputs['Error']
    Label:
        text: root.outputs['End']
        size_hint: 1, None